@using Morris.Cascade

@*
    Values are passed to children using CascadingValue with IsFixed=true, this avoids
    click events etc in this component from forcing child components to re-render.
*@

@if (SourceCell is ValueSource<decimal> editableCell)
{
    <CascadingValue Value=@editableCell>
        <EditableCell />
    </CascadingValue>
}
else if (SourceCell is ISource<decimal> calculatedCell)
{
    <CascadingValue Value=@calculatedCell>
        <CalculatedCell />
    </CascadingValue>
}
else
{
    <text>Unknown cell type @SourceCell?.GetType()?.Name</text>
}
